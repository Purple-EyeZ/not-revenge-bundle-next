{
  "extends": "@revenge-mod/types/tsconfig",
  "compilerOptions": {
    "types": [
      "@revenge-mod/types",
      "./types",
      "./types.modules",
      "node/util",
      "node/events"
    ],
    "allowJs": true,
    "paths": {
      "~/*": ["./src/*"],
      "~assets/*": ["./dist/assets/generated/*"]
    }
  },
  "include": ["lib", "src", "types"],
  "exclude": ["**/*.test.ts"]
}
